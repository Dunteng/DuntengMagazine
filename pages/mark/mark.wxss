/* pages/mark/mark.wxss */



.user-container {
    display: flex;
    /* flex-direction: column; */
    justify-content: center;
    width: 100%;
    padding: 0 30rpx;
    background-color: #fff;
}

.user-info {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 50rpx;
}

.user-name {
    font-size: 40rpx;
    margin-right: 54rpx;
}

.user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 54rpx;
}

.user-avatar image{
    width: 100rpx;
    height: 100rpx;
}

.share {
    width: 50rpx;
    height: 50rpx;
    margin-top: 16rpx;
    margin-bottom: 30rpx;
}

.share image {
    width: 50rpx;
    height: 50rpx;
}


.get-user-info {
    padding: 0;
    border: 0;
}